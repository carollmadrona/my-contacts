<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="user"
            type="com.example.mycontacts.viewmodel.UserViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:src="@mipmap/ic_launcher"
            android:id="@+id/user_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <TextView
            android:id="@+id/user_id_label"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:text="userid:"
            app:layout_constraintLeft_toRightOf="@id/user_image"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/user_id"
            android:text="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/user_id_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/user_name_label"
            android:layout_width="wrap_content"
            android:text="name:"
            app:layout_constraintTop_toBottomOf="@id/user_id_label"
            app:layout_constraintLeft_toRightOf="@id/user_image"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/user_name"
            app:layout_constraintTop_toBottomOf="@id/user_id"
            android:text="somename"
            app:layout_constraintLeft_toRightOf="@id/user_id_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>